<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SubcatActivity">


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_alignParentTop="true"
        android:gravity="center">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/baseline_arrow_back_24">

        </ImageView>

        <TextView
            android:id="@+id/titleTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_weight="1"
            android:fontFamily="@font/outfit"
            android:text="Category Name"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp">

        </TextView>



    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearLayout2"
        android:layout_above="@id/addSubCat"
        >

    </androidx.recyclerview.widget.RecyclerView>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/addSubCat"
        android:layout_width="match_parent"
        android:textAllCaps="false"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/theme_Blue"
        android:drawableEnd="@drawable/baseline_add_24"
        android:text="Add Subcategory"
        android:drawableTint="@color/white"
        android:layout_margin="@dimen/_10sdp"
        android:layout_alignParentBottom="true"
        android:textSize="@dimen/_10sdp"
        android:textColor="@color/white" />



</RelativeLayout>